#!/sbin/sh

# Uninstall Magisk

set -e

interface="${1}"
updater_fd="${2}"
zipfile="${3}"

tmp_dir=/tmp/magisk_uninstaller
uninstaller_zip=/tmp/mmr/template/Magisk-uninstaller-20190501.zip

mkdir -p $tmp_dir
test -f $uninstaller_zip
unzip $uninstaller_zip -d $tmp_dir

chmod 0755 ${tmp_dir}/META-INF/com/google/android/update-binary
exec ${tmp_dir}/META-INF/com/google/android/update-binary "${interface}" "${updater_fd}" $uninstaller_zip
